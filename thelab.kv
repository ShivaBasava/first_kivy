    Button:
        text: "A"
        size_hint: .2, .2
    Button:
        text: "B"
        size_hint: .2, .2
    Button:
        text: "C"
        size_hint: .2, .2
    Button:
        text: "D"
        size_hint: .2, .2
    Button:
        text: "E"
        size_hint: .2, .2
    Button:
        text: "F"
        size_hint: .2, .2

<GridLayoutExample@GridLayout>:
    # for grid layout, mandatory parameters are - "rows" and "cols"
    rows: 2
    #cols: 3
    Button:
        text: "A"
        size_hint: None, 1
        width: "60dp"
    BoxLayoutExample:
    #Button:
    #    text: "B"
    Button:
        text: "C"
    Button:
        text: "D"
        size_hint: None, 1
        width: "60dp"
    Button:
        text: "E"
    Button:
        text: "F"

<AnchorLayoutExample>:
    # properties only for Anchor Layout - anchor_x, anchor_y
    # anchor_x different values - right, center, left
    anchor_x: "center"
    # annchor_y different values - bottom, top, center
    anchor_y: "top"
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: "A"
            #size_hint: .1, .1
        Button:
            text: "B"
            #size_hint: .1, .1

<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "A"
        # size: "40dp", "20dp"
        size_hint: None, .5
        # pos_hint to change the button/label position inside the layout
        # for x - x:1 or center_x:1 or right:1
        # for y - y:1 or center_y:1 or top:1
        pos_hint: { "x": .5}
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Button:
            text: "B1"
            size_hint: 1, .5
        Button:
            text: "B2"
            size_hint: 1, .5
        Button:
            text: "B3"
            size_hint: 1, .5
        Button:
            text: "B4"
            size_hint: 1, .5

    Label:
        text: "C"

<MainWidget>:
    Button:
        text: "Hello"
        size: "40dp", "20dp"
        pos: "100dp", "200dp"
        color: 0, 1, 0, 1
    Label:
        text: "Hello2"
        size: "40dp", "20dp"
        pos: "200dp", "300dp"
        color: 1, 0, 0, 1